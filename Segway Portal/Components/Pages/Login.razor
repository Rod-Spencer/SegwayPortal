Segway Portal\Components\Pages\Login.razor
@page "/login"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<h3 class="text-center">Sign in</h3>

<EditForm Model="model" OnValidSubmit="HandleLogin">
    <div class="mb-3">
        <label class="form-label">Username</label>
        <InputText class="form-control" @bind-Value="model.Username" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText type="password" class="form-control" @bind-Value="model.Password" />
    </div>

    <div class="form-check mb-3">
        <InputCheckbox class="form-check-input" @bind-Value="model.RememberMe" />
        <label class="form-check-label">Remember me</label>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Login</button>
    </div>

    @if (!string.IsNullOrEmpty(error))
    {
        <div class="mt-3 text-danger">@error</div>
    }
</EditForm>
