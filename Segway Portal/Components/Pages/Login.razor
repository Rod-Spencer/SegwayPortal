@using Microsoft.AspNetCore.Authorization

@page "/login"
@* @rendermode InteractiveServer *@

<PageTitle>Login</PageTitle>

<h3 class="text-center">Sign in</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="mt-3 text-danger">@error</div>
}
else
{
    <div class="d-flex justify-content-center">
        <div style="width: 500px; border: 1px solid #dee2e6; padding: 2em; border-radius: 0.25rem;">
            <form method="post" action="/account/login">
                @* <EditForm Model="model" OnValidSubmit="HandleLogin" style="width: 100%;"> *@
                <div class="d-flex flex-column align-items-center" style="width: 100%;">
                    <div class="mb-3 d-flex align-items-center" style="width: 80%;">
                        <div style="width: 33%;">User Name</div>
                        <InputText class="form-control" style="width: 66% !important;" @bind-Value="UserName" />
                    </div>

                    <div class="mb-3 d-flex align-items-center" style="width: 80%;">
                        <div style="width: 33%;">Password</div>
                        <InputText type="password" class="form-control" style="width: 66% !important;" @bind-Value="Password" />
                    </div>
                </div>
                <div class="form-check mb-3 d-flex justify-content-center">
                    <InputCheckbox class="form-check-input" @bind-Value="RememberMe" />
                    <label class="form-check-label mx-3">Remember me</label>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit" @onclick="HandleLogin">Login</button>
                </div>
                @* </EditForm> *@
            </form>
        </div>
    </div>
}