{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DefaultConnectionName": "Local",
  "ConnectionStrings": {
    "Local": "Server=.;Database=Segway_Production;Trusted_Connection=True;Integrated Security=true;TrustServerCertificate=True",
    "DESKTOP-ROD": "Server=DESKTOP-ROD;Database=Segway_Production;Trusted_Connection=True;Integrated Security=true;TrustServerCertificate=True",
    "Remote": "Server=tcp:yourserver.database.windows.net,1433;Initial Catalog=SegwayPortalProd;User ID=YOUR_USER;Password=YOUR_PASSWORD;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "AllowedHosts": "*",
  "Services": {
    "RazorComponents": {
      "InteractiveServerComponents": true
    },
    "DbContext": {
      "DefaultConnectionName": "Local",
      "EntityFrameworkCore": {
        "DatabaseProvider": "SqlServer"
      }
    }
  }
}
